<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AidsTest.Views.StartPage"
             BackgroundImageSource="bkg.png">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="120.jpg" Aspect="AspectFill" HeightRequest="100"/>
            
        
        <Image x:Name ="logoBtn"      Margin="30"
                                            Source="logo_aids.png"
               Aspect="AspectFit"
               WidthRequest="250"
                                            VerticalOptions="Center" 
                                            BackgroundColor="Transparent"/>
            <Label x:Name ="results" Text="Отвечать на вопросы теста необходимо по очереди"
                                       TextColor="Black" 
                                       WidthRequest="300"
                   HorizontalOptions="Center"
                                       FontSize="Title"  
                                       FontAttributes="Bold"/>
                            
                <!--<Label Text="Первым/ой отвечает" />-->
                <Label  x:Name ="sexLbl" 
                        HorizontalTextAlignment="Center" 
                        Text="{Binding Gender}" 
                        HorizontalOptions="Center"
                        Margin="0,50,0,50"
                        FontSize="Subtitle"
                        />
                
            <Button Text="ДАЛЕЕ" 
                    WidthRequest="120"
                    HorizontalOptions="Center"
                    FontSize="Subtitle"
                    FontAttributes="Bold"
                    Command="{Binding RoutToPage}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>